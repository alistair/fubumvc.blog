<div class="managecommentsfilters">
  <div>
    <select class="filter">
      ${this.Option(x => x.ShowSpam, "All", null)}
      ${this.Option(x => x.ShowSpam, "Approved", "False")}
      ${this.Option(x => x.ShowSpam, "Spam", "True")}
    </select>
    <select>
      <option>Bulk Actions</option>
      <option>Approve</option>
      <option>Delete</option>
      <option>Mark As Spam</option>
    </select>
  </div>
  <paging totalPages="Model.TotalPages"/>
</div>
<div class="managecommentsfilters">
    <select class="input-small">
      ${this.Option(x => x.ShowSpam, "All", null)}
      ${this.Option(x => x.ShowSpam, "Approved", "False")}
      ${this.Option(x => x.ShowSpam, "Spam", "True")}
